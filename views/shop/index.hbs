<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products}}
  <div class="row">

    {{#each this}}
        <div class="col-sm-6 col-md-4" id='{{@index}}'>
            <div class="thumbnail">
                <img src="{{this.image}}" alt="..." class="img-responsive">
                <div class="caption">
                    <h3>{{this.title}}</h3>
                    <p class="description">{{this.description}}</p>
                    <div class="clearfix">
                        <div class="price pull-left">${{this.price}}</div>
                      <!--  <a href="/to-shop-cart/{{this._id}}"  class="btn btn-success pull-right" role="button" >add to cart</a>-->
                      <button class="btn btn-success pull-right product" id="{{this._id}}">Add to cart</button>

                    </div>
                </div>
            </div>
        </div>
    {{/each}}
  </div>
{{/each}}
